// BUNDLE SPAWNERS
//(spawn multiple items at once!)
class doso_rapierspawner:actor{
	override void postbeginplay(){
		spawn("doso_rapier",pos,ALLOW_REPLACE);
		if(random(0,3))
			spawn("doso_dagger",vec3angle(frandom(12.,16.),frandom(-180.,180.),4.),ALLOW_REPLACE);
		destroy();
	}
	states{
	spawn:
		TNT1 A 0;
		stop;
	}
}

// Empty item for nothing to spawn
class doso_destroy:actor{
	states{
	spawn:
		TNT1 A 0;
		stop;
	}
}